<%= link_to "Shorten a Url!", new_url_path %>
</table>
<table>
  <tr>
    <th> Original URL</th>
    <th> Shortened URL</th>
  </tr>
  <% @url.each do |url| %>
  <tr>
    <td><%=  link_to url.long_url, url.long_url %></td>
    <td><%=  link_to url.short_url, controller: :urls, action: :short, id: url%></td>
    <td><%= link_to "Show", url_path(url) %></td>
    <td><%= link_to 'Delete', url_path(url), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
